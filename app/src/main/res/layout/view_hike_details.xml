<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:text="Hike Details"
        android:textSize="35sp"
        android:layout_marginLeft="120sp"
        android:layout_width="wrap_content"
        android:layout_height="70sp"/>

    <TextView
        android:id="@+id/hike_id_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="ID:" />

    <TextView
        android:id="@+id/hike_name_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Name:" />

    <TextView
        android:id="@+id/hike_location_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Location:" />

    <TextView
        android:id="@+id/hike_date_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Date:" />

    <TextView
        android:id="@+id/hike_parking_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Parking status:" />

    <TextView
        android:id="@+id/hike_length_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Length:" />

    <TextView
        android:id="@+id/hike_difficulty_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Difficulty level:" />

    <TextView
        android:id="@+id/hike_description_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Description:" />

    <LinearLayout
        android:layout_marginTop="30sp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60sp">

        <Button
            android:id="@+id/backToHikeList"
            android:text="Back to list"
            android:layout_width="120sp"
            android:layout_height="50sp"/>

        <Button
            android:id="@+id/updateHike"
            android:text="Update"
            android:layout_marginLeft="20sp"
            android:layout_width="100sp"
            android:layout_height="50sp"/>

        <Button
            android:id="@+id/deleteHike"
            android:text="Delete"
            android:layout_marginLeft="20sp"
            android:layout_width="100sp"
            android:layout_height="50sp"/>

    </LinearLayout>

    <TextView
        android:text="Observations of the hike:"
        android:textSize="20sp"
        android:layout_marginBottom="15sp"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:orientation="horizontal">

        <TextView
            android:textSize="23sp"
            android:text="Observation Title"
            android:layout_width="200sp"
            android:layout_height="70sp"/>

        <TextView
            android:textSize="23sp"
            android:layout_marginLeft="40sp"
            android:text="Action"
            android:layout_width="200sp"
            android:layout_height="70sp"/>

    </LinearLayout>

    <ScrollView
        android:layout_marginBottom="20sp"
        android:layout_width="match_parent"
        android:layout_height="150sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/observation_list"
                android:layout_width="match_parent"
                android:layout_height="150sp">
            </ListView>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/addObservation_btn"
        android:text="Add new observation"
        android:layout_width="match_parent"
        android:layout_height="60sp"/>

</LinearLayout>
