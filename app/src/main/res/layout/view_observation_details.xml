<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:text="Observation details"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="80sp"
            android:textSize="30sp"
            android:layout_height="70sp"/>

        <TextView
            android:id="@+id/observation_id"
            android:textSize="20sp"
            android:layout_marginLeft="20sp"
            android:layout_width="wrap_content"
            android:layout_height="50sp"/>

        <TextView
            android:id="@+id/observation_title"
            android:textSize="20sp"
            android:layout_marginLeft="20sp"
            android:layout_width="wrap_content"
            android:layout_height="50sp"/>

        <TextView
            android:id="@+id/observation_time"
            android:textSize="20sp"
            android:layout_marginLeft="20sp"
            android:layout_width="wrap_content"
            android:layout_height="50sp"/>

        <TextView
            android:id="@+id/observation_comment"
            android:textSize="20sp"
            android:layout_marginLeft="20sp"
            android:layout_width="wrap_content"
            android:layout_height="50sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/update_observation"
                android:text="Update"
                android:layout_width="120sp"
                android:layout_marginLeft="30sp"
                android:layout_height="70sp"/>

            <Button
                android:id="@+id/remove_observation"
                android:text="Remove"
                android:layout_marginLeft="10sp"
                android:layout_width="120sp"
                android:layout_height="70sp"/>

            <Button
                android:id="@+id/return_hikeDetails"
                android:text="Back"
                android:layout_marginLeft="10sp"
                android:layout_width="120sp"
                android:layout_height="70sp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>